<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bhsd.bustayo">

    <!-- API 호출하기 위함 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 사용자 현재 위치 접근 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <!-- android:networkSecurityConfig="@xml/network_security_config" -->

        <!-- 네이버 지도 -->
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="14x4s7l2zd" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 검색 화면 -->
        <activity
            android:name=".SearchActivity"
            android:windowSoftInputMode="stateAlwaysVisible"/>

        <!-- 불편신고 리스트 화면 -->
        <activity android:name=".ComplaintActivity"/>

        <!-- 불편신고 접수 화면 -->
        <activity android:name=".AddComplaintActivity"/>

        <!-- 버스 화면 -->
        <activity android:name=".StationListActivity" />

        <!-- 버스정보 화면 -->
        <activity android:name=".BusInfoActivity" />

        <!-- 정류장 화면 -->
        <activity android:name=".StationActivity" />

        <activity android:name=".JoinActivity" />

        <activity android:name=".LoginActivity" />

    </application>

</manifest>