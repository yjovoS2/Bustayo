<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/searchGoBack"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_go_back"
            android:backgroundTint="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="18sp"
            android:textColor="#aa777777"
            android:paddingStart="15dp">
            <requestFocus/>
        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_gray"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디"
        android:textSize="18sp"
        android:padding="15dp"
        android:background="@drawable/edit_round"
        android:layout_marginTop="70dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/line"/>

    <EditText
        android:id="@+id/editPASSWD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:textSize="18sp"
        android:padding="15dp"
        android:background="@drawable/edit_round"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editID"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="18sp"
        android:padding="15dp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button_round"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editPASSWD"/>

    <TextView
        android:id="@+id/search_id_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 / 비밀번호 찾기"
        android:textSize="10sp"
        android:textColor="#aa777777"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="@id/loginButton"
        app:layout_constraintTop_toBottomOf="@id/loginButton"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_gray"
        app:layout_constraintTop_toBottomOf="@+id/search_id_passwd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@id/loginNaver"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@drawable/button_circle"
        android:text="N"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/loginKakao"
        android:backgroundTint="#4CAF50"/>

    <Button
        android:id="@id/loginKakao"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@drawable/button_circle"
        android:text="K"
        android:textSize="25sp"
        android:backgroundTint="@color/bus_yellow"
        app:layout_constraintTop_toTopOf="@id/loginNaver"
        app:layout_constraintLeft_toRightOf="@+id/loginNaver"
        app:layout_constraintRight_toLeftOf="@+id/loginGoogle"/>

    <Button
        android:id="@id/loginGoogle"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@drawable/button_circle"
        android:text="G"
        android:textSize="25sp"
        android:backgroundTint="@color/bus_red"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@id/loginNaver"
        app:layout_constraintLeft_toRightOf="@+id/loginKakao"
        app:layout_constraintRight_toLeftOf="@+id/loginGuest"/>

    <Button
        android:id="@id/loginGuest"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@drawable/button_circle"
        android:text="G"
        android:textSize="25sp"
        android:backgroundTint="@color/background_gray"
        app:layout_constraintTop_toTopOf="@id/loginNaver"
        app:layout_constraintLeft_toRightOf="@id/loginGoogle"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>