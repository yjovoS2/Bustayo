<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bustop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버스정류장 이름"
        android:layout_marginLeft="30dp"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dropdown_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@id/up"
        android:layout_width="10dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/dropdown_button"
        app:layout_constraintRight_toRightOf="@id/dropdown_button"
        android:background="#ffffff"/>

    <ImageView
        android:id="@+id/down"
        android:layout_width="10dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/up"
        app:layout_constraintLeft_toLeftOf="@id/dropdown_button"
        app:layout_constraintRight_toRightOf="@id/dropdown_button"
        android:background="#c0c0c0"/>

    <ImageView
        android:id="@+id/dropdown_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_dropdown" />


</androidx.constraintlayout.widget.ConstraintLayout>