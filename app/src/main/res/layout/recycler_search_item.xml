<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="25dp"
    android:paddingVertical="15dp"
    android:background="@drawable/search_recycler_border">

    <TextView
        android:id="@+id/historyTitle"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/historySub1"
        android:textSize="13sp"
        android:textColor="@color/colorNormalDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/historyTitle"
        app:layout_constraintBottom_toTopOf="@id/historySub2"/>

    <TextView
        android:id="@+id/historySub2"
        android:textSize="13sp"
        android:textColor="@color/colorNormalDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/historyTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>