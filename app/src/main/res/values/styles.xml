<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- NavigationView 스타일 -->
    <style name="NavigationViewTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="itemIconSize">25dp</item>
        <item name="itemIconTint">@color/colorAccent</item>
        <item name="itemTextColor">#cc777777</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
