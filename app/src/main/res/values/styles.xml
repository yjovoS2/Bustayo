<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- NavigationView 스타일 -->
    <style name="NavigationViewTheme">
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="itemIconSize">25dp</item>
        <item name="itemIconTint">@color/colorAccent</item>
        <item name="itemTextColor">#cc777777</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- search 관련 EditText 스타일 -->
    <style name="searchBox">
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorNormal</item>
        <item name="android:background">@drawable/search_border</item>
        <item name="android:layout_marginHorizontal">30dp</item>
    </style>

    <!-- complaint title -->
    <style name="complaintTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorNormal</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <!-- add_complaint 입력폼 타이틀 스타일 -->
    <style name="addComplaintInfo">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- add_complaint 입력폼 스타일 -->
    <style name="addComplaintContent">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorNormalDark</item>
        <item name="android:textColorHint">@color/colorNormal</item>
        <item name="android:backgroundTint">@color/colorNormalLight</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
