<?xml version="1.0" encoding="utf-8"?>
<!-- 리사이클러뷰 아이템 마다 구분선 생성 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/colorNormalLight"/>
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
</layer-list>